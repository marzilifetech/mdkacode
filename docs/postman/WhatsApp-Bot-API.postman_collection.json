{
  "info": {
    "name": "WhatsApp Bot API",
    "description": "Auth API (OTP + JWT), Dashboard API, Payment API (Razorpay), Antakshari API (team, profile, members, link-order). Use Postman environments: Local (base_url = http://localhost:3001) or Prod (base_url = your API Gateway URL).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://jmv0oz53r4.execute-api.ap-south-1.amazonaws.com/prod"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "refresh_token",
      "value": ""
    },
    {
      "key": "mobile",
      "value": "919876543210"
    },
    {
      "key": "otp_code",
      "value": "123456"
    },
    {
      "key": "product_id",
      "value": ""
    },
    {
      "key": "razorpay_order_id",
      "value": ""
    },
    {
      "key": "razorpay_payment_id",
      "value": ""
    },
    {
      "key": "razorpay_signature",
      "value": ""
    },
    {
      "key": "team_id",
      "value": ""
    },
    {
      "key": "antakshari_ref",
      "value": "username_antakshari"
    }
  ],
  "item": [
    {
      "name": "Auth API",
      "description": "JWT + OTP via WhatsApp. Request OTP → Verify OTP → Use access/refresh tokens. Verify OTP and Refresh return userType ('guest' or 'ADMIN'; ADMIN if mobile is in ADMIN_MOBILES).",
      "item": [
        {
          "name": "Request OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile\": \"{{mobile}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/otp/request",
              "host": ["{{base_url}}"],
              "path": ["auth", "otp", "request"]
            },
            "description": "Sends 6-digit OTP to the mobile number via WhatsApp (template: 4a4ac078-72a2-4f3d-b8cf-c0e0c3359d20). Rate limit: 30 seconds per mobile."
          }
        },
        {
          "name": "Verify OTP",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.accessToken) { pm.collectionVariables.set('access_token', json.accessToken); }",
                  "if (json.refreshToken) { pm.collectionVariables.set('refresh_token', json.refreshToken); }"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile\": \"{{mobile}}\",\n  \"code\": \"{{otp_code}}\",\n  \"platform\": \"web\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/otp/verify",
              "host": ["{{base_url}}"],
              "path": ["auth", "otp", "verify"]
            },
            "description": "Verifies OTP and returns accessToken, refreshToken, and userType ('guest' or 'ADMIN'). Saves tokens to collection variables for Refresh and Dashboard requests."
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["auth", "refresh"]
            },
            "description": "Returns new access and refresh tokens and userType. Uses refresh_token from collection variables (set by Verify OTP)."
          }
        },
        {
          "name": "Update User Permission",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile\": \"{{mobile}}\",\n  \"userType\": \"ADMIN\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/user/permission",
              "host": ["{{base_url}}"],
              "path": ["auth", "user", "permission"]
            },
            "description": "Update a user's userType to ADMIN or guest. Caller must be ADMIN (Bearer token with userType ADMIN). Body: mobile (E.164 or 10-digit), userType ('ADMIN' or 'guest'). Target user gets new type on next refresh/login."
          }
        }
      ]
    },
    {
      "name": "Dashboard API",
      "description": "Dashboard endpoints (optional: protect with JWT authorizer). Use access_token in Authorization header.",
      "item": [
        {
          "name": "Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/dashboard/stats",
              "host": ["{{base_url}}"],
              "path": ["dashboard", "stats"]
            },
            "description": "GET dashboard statistics (totalUsers, eligibleUsers, etc.)."
          }
        },
        {
          "name": "Users (list)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/dashboard/users?limit=50",
              "host": ["{{base_url}}"],
              "path": ["dashboard", "users"],
              "query": [
                { "key": "limit", "value": "50" },
                { "key": "lastKey", "value": "", "disabled": true }
              ]
            },
            "description": "GET paginated users. Optional: lastKey for next page."
          }
        },
        {
          "name": "Users (by mobile)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/dashboard/users?mobile={{mobile}}",
              "host": ["{{base_url}}"],
              "path": ["dashboard", "users"],
              "query": [{ "key": "mobile", "value": "{{mobile}}" }]
            },
            "description": "GET single user profile by mobile."
          }
        }
      ]
    },
    {
      "name": "Payment API",
      "description": "Razorpay payment: products, orders, verify. All except Webhook require Authorization: Bearer {{access_token}}. Use Local env (port 3001) or Prod env.",
      "item": [
        {
          "name": "Register Product",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Product\",\n  \"amount\": 500,\n  \"gstPercent\": 18\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment/products",
              "host": ["{{base_url}}"],
              "path": ["payment", "products"]
            },
            "description": "Register a product (name, amount in INR, gstPercent). Returns productId, totalPaise. Save product_id for Update / Create Order."
          }
        },
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/payment/products",
              "host": ["{{base_url}}"],
              "path": ["payment", "products"]
            },
            "description": "List all registered products."
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Product\",\n  \"amount\": 600,\n  \"gstPercent\": 18\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment/products/{{product_id}}",
              "host": ["{{base_url}}"],
              "path": ["payment", "products", "{{product_id}}"]
            },
            "description": "Update product by product_id (set in collection variables or from Register Product response)."
          }
        },
        {
          "name": "Get Payment Config",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/payment/config",
              "host": ["{{base_url}}"],
              "path": ["payment", "config"]
            },
            "description": "Get payment configuration (enabled methods, notes)."
          }
        },
        {
          "name": "Update Payment Config",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"enabledMethods\": [\"card\", \"upi\"],\n  \"notes\": \"Test config\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment/config",
              "host": ["{{base_url}}"],
              "path": ["payment", "config"]
            },
            "description": "Update payment configuration."
          }
        },
        {
          "name": "Create Order",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.order && json.order.order_id) { pm.collectionVariables.set('razorpay_order_id', json.order.order_id); }"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{product_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment/orders",
              "host": ["{{base_url}}"],
              "path": ["payment", "orders"]
            },
            "description": "Create Razorpay order by productId (or productName). Returns order_id, amount, key for Checkout. Saves order_id to razorpay_order_id for Test Post-Payment WhatsApp (Mock)."
          }
        },
        {
          "name": "Verify Payment",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"razorpay_order_id\": \"{{razorpay_order_id}}\",\n  \"razorpay_payment_id\": \"{{razorpay_payment_id}}\",\n  \"razorpay_signature\": \"{{razorpay_signature}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment/verify",
              "host": ["{{base_url}}"],
              "path": ["payment", "verify"]
            },
            "description": "After Checkout success, send razorpay_order_id, razorpay_payment_id, razorpay_signature from client. Set these in collection variables or paste in body."
          }
        },
        {
          "name": "List Payments",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/payment/payments",
              "host": ["{{base_url}}"],
              "path": ["payment", "payments"]
            },
            "description": "List payments for the authenticated user."
          }
        },
        {
          "name": "Webhook (Razorpay)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "X-Razorpay-Signature", "value": "" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": \"payment.captured\",\n  \"payload\": { \"payment\": { \"entity\": { \"id\": \"pay_xxx\", \"order_id\": \"order_xxx\", \"method\": \"upi\" } } }\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment/webhook",
              "host": ["{{base_url}}"],
              "path": ["payment", "webhook"]
            },
            "description": "Razorpay calls this; no JWT. On payment.captured the handler looks up the order, then sends WhatsApp confirmation (team name or product name, amount) via Gupshup. For manual testing set X-Razorpay-Signature (HMAC of body with RAZORPAY_WEBHOOK_SECRET)."
          }
        },
        {
          "name": "Test Post-Payment WhatsApp (Mock)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": \"payment.captured\",\n  \"payload\": {\n    \"payment\": {\n      \"entity\": {\n        \"id\": \"pay_mock_1\",\n        \"order_id\": \"{{razorpay_order_id}}\",\n        \"method\": \"upi\"\n      }\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment/webhook",
              "host": ["{{base_url}}"],
              "path": ["payment", "webhook"]
            },
            "description": "Test post-payment WhatsApp flow locally with MOCK. Steps: 1) Use Local env (base_url = http://localhost:3001). 2) Auth: Request OTP → Verify OTP. 3) Register a product (or use existing product_id). 4) Create Order (POST /payment/orders) with productId and Bearer token; copy order_id from response and set collection variable razorpay_order_id. 5) Call this request (no X-Razorpay-Signature needed when LOCAL_MOCK_PAYMENT=true). WhatsApp confirmation (team/product name + amount) is sent to the order mobile if Gupshup env (GUPSHUP_USER_ID, GUPSHUP_PASSWORD, template ID) is set in env.json PaymentAPI. Check server logs for payment_captured_webhook and whatsapp result."
          }
        }
      ]
    },
    {
      "name": "Antakshari API",
      "description": "Team registration, profile, members (5 per team), link payment order. All require Authorization: Bearer {{access_token}}. Flow: Create Team → Get/Update Profile → Add Members → Create Order (Payment API) → Link Order → Get Teams/Users.",
      "item": [
        {
          "name": "Create Team",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.teamId) { pm.collectionVariables.set('team_id', json.teamId); }"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"teamName\": \"My Team\",\n  \"ref\": \"{{antakshari_ref}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/antakshari/team",
              "host": ["{{base_url}}"],
              "path": ["antakshari", "team"]
            },
            "description": "Create a team. Returns teamId (saved to collection variable for Add Members / Link Order)."
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/antakshari/profile",
              "host": ["{{base_url}}"],
              "path": ["antakshari", "profile"]
            },
            "description": "Get owner name and dob from UserProfile (mobile from JWT). Returns name, dob (dd/mm/yyyy or null). 404 if not found."
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Owner Name\",\n  \"dob\": \"02/09/2006\",\n  \"ref\": \"{{antakshari_ref}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/antakshari/profile",
              "host": ["{{base_url}}"],
              "path": ["antakshari", "profile"]
            },
            "description": "Create or update owner in UserProfile (mobile from JWT). name required; dob optional (dd/mm/yyyy); ref optional. DOB is saved every time when provided."
          }
        },
        {
          "name": "Add Members",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"members\": [\n    { \"name\": \"Member 1\", \"phone\": \"9876543210\", \"dob\": \"01/01/2000\" },\n    { \"name\": \"Member 2\", \"phone\": \"9876543211\", \"dob\": \"02/02/2000\" },\n    { \"name\": \"Member 3\", \"phone\": \"9876543212\", \"dob\": \"03/03/2000\" },\n    { \"name\": \"Member 4\", \"phone\": \"9876543213\", \"dob\": \"04/04/2000\" },\n    { \"name\": \"Member 5\", \"phone\": \"9876543214\", \"dob\": \"05/05/2000\" }\n  ],\n  \"ref\": \"{{antakshari_ref}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/antakshari/team/{{team_id}}/members",
              "host": ["{{base_url}}"],
              "path": ["antakshari", "team", "{{team_id}}", "members"]
            },
            "description": "Add exactly 5 members. DOB format: dd/mm/yyyy. Phone: 10 digits or 12 with country code. Uses team_id from Create Team."
          }
        },
        {
          "name": "Link Order",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"{{razorpay_order_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/antakshari/team/{{team_id}}/link-order",
              "host": ["{{base_url}}"],
              "path": ["antakshari", "team", "{{team_id}}", "link-order"]
            },
            "description": "Link Razorpay order (from Payment API Create Order) to team. Set razorpay_order_id in collection variables or body."
          }
        },
        {
          "name": "Get Users",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/antakshari/users",
              "host": ["{{base_url}}"],
              "path": ["antakshari", "users"],
              "query": [
                { "key": "ref", "value": "{{antakshari_ref}}", "disabled": true },
                { "key": "teamId", "value": "{{team_id}}", "disabled": true }
              ]
            },
            "description": "List users (members + profile) with team info and payment status. Optional query: ref, teamId."
          }
        },
        {
          "name": "Get Teams",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/antakshari/teams",
              "host": ["{{base_url}}"],
              "path": ["antakshari", "teams"],
              "query": [
                { "key": "ref", "value": "{{antakshari_ref}}", "disabled": true },
                { "key": "search", "value": "", "disabled": true, "description": "Filter by team name or member name (case-insensitive substring)" },
                { "key": "limit", "value": "50", "disabled": true, "description": "Admin only: page size (default 50, max 100)" },
                { "key": "nextToken", "value": "", "disabled": true, "description": "Admin only: token for next page" }
              ]
            },
            "description": "List teams (with members and payment status). ADMIN gets all teams with pagination. Optional query: ref, search (team name or member name), limit and nextToken (admin pagination)."
          }
        }
      ]
    }
  ]
}
