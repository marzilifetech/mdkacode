{
  "name": "whatsapp-bot",
  "version": "1.0.0",
  "description": "WhatsApp Bot - Inbound Webhook Handler using AWS SAM",
  "scripts": {
    "build": "sam build",
    "validate": "sam validate",
    "local:invoke": "sam local invoke GupshupInboundWebhook --event events/test-text-message.json",
    "local:api": "sam local start-api --port 3000 --env-vars env.json",
    "local:server": "node scripts/local-server.js",
    "local:test": "./test-local.sh",
    "local:test:aws": "./test-with-aws.sh",
    "deploy": "sam deploy",
    "deploy:guided": "sam deploy --guided",
    "validate:deployed": "./scripts/validate-deployed.sh",
    "deploy:watch": "sam sync --stack-name whatsapp-bot-stack --watch",
    "logs": "sam logs -n GupshupInboundWebhook --stack-name whatsapp-bot-stack --tail",
    "logs:payment": "sam logs -n PaymentAPI --stack-name whatsapp-bot-stack --tail",
    "delete": "aws cloudformation delete-stack --stack-name whatsapp-bot-stack",
    "test": "npm run local:test"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "aws",
    "sam",
    "lambda",
    "webhook"
  ],
  "author": "",
  "license": "ISC",  
  "devDependencies": {}
}

